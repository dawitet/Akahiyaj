<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme - Clean white background for WebP animation -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- White background for clean WebP display -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Remove system splash icon to avoid conflicts with our custom splash -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <!-- Very short system splash duration since we handle custom timing -->
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.Akahidegn</item>
        <!-- Legacy / below Android 12 - clean white background -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>