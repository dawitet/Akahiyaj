<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!-- For API 31+ the SplashTheme defined here will be used for the Splash Screen -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item> <!-- Or your desired background color -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/new_launcher_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- Optional: Duration in ms -->
        <item name="postSplashScreenTheme">@style/Theme.Akahidegn</item>  <!-- Theme to apply after splash -->
    </style>
</resources>